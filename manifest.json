{
  "manifest_version": 3,
  "name": "Task Tracker",
  "description": "An extension that will help in tracking tasks through organization and reminders",
  "version": "0.5.5",
  "permissions": [
    "storage", 
    "alarms", 
    "notifications"
  ],
  "background": {
     "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "module": true,
      "js": [
        "scripts/task.js",
        "scripts/views/openView.js",
        "scripts/taskPage.js",
        "scripts/views/calendarView.js",
        "scripts/views/listView.js",
        "scripts/settings.js",
        "scripts/tests/taskPageTest.js"
      ]
    }
  ],
  "action": {
    "default_popup": "html/openView.html",
    "default_icon": "images/taskIcon.png"
  }
}
